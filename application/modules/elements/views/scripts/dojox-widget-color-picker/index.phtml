<table style="border-spacing: 0px">
	<tr>
		<td>
			<link rel="stylesheet"
				href="/dojotoolkit/dojox/widget/ColorPicker/ColorPicker.css" />
			<div data-dojo-type="dijit/form/DropDownButton">
				<span> Seleccione ... </span>
				<div data-dojo-type="dojox/widget/ColorPicker"
					id="<?=$this->domId . $this->i?>ColorPicker" name="<?=$this->target?>ColorPicker"
					value="<?=$this->value?>" 
					onchange="dojo.byId('<?=$this->domId . $this->i?>Color').style.backgroundColor=this.get('value'); dojo.byId('<?=$this->domId . $this->i?>').value=this.get('value')"></div>
			</div>
			<label for="<?=$this->domId . $this->i?>">Transparente</label>
			<input type="checkbox" data-dojo-type="dijit/form/CheckBox" id="<?=$this->domId . $this->i?>CheckTransparent" name="transparent" onchange="
			if (this.get('checked')) {
			    dojo.byId('<?=$this->domId . $this->i?>Color').style.backgroundColor = 'transparent'; 
			    dojo.byId('<?=$this->domId . $this->i?>Color').value = 'transparent';
			} else {
			    dojo.byId('<?=$this->domId . $this->i?>Color').style.backgroundColor = dijit.byId('<?=$this->domId . $this->i?>ColorPicker').get('value'); 
			    dojo.byId('<?=$this->domId . $this->i?>Color').value = dijit.byId('<?=$this->domId . $this->i?>ColorPicker').get('value');
		    }" />
			<input type="hidden" value="<?=$this->value?>" id="<?=$this->domId . $this->i?>" name="<?=$this->target?>"/>
		</td>
		<td id="<?=$this->domId . $this->i?>Color" style="background-color: <?=$this->value?>; min-width: 2em; padding: 0.3em">
		</td>
	</tr>
</table>